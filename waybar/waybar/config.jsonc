
{
    //GLOBAL


    "layer": "top",

    "position": "top",

    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "tray",
	"idle_inhibitor",
	"battery",
	"temperature",
    ],
  
    "modules-center": [
        "clock#time",
	"custom/modem",
	"custom/notification",
    ],

    "modules-right": [
	//"battery",
        //"clock#time",
	"network",
	"cpu",
	"memory",
	"pulseaudio",
	"backlight"
    ],

//MODULES

    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""]
    },
    
    
    "clock#time": {
        "interval": 10,
	"locale": "C",
	//"timezone": "Europe/Berlin",
        "format": "{:%H:%M}",
        "tooltip": false
    },


    "clock#date": {
        "interval": 20,
	"locale": "C",
	"timezone": "America/Los_Angeles",
        "format": "{:%H:%M🕰 %e %b %Y}", // Icon: calendar-alt
        //"tooltip-format": "{:%e %B %Y}"
        "tooltip": true,
	"on-click": "termite -e swayphone_menuselect"
    },


    "battery": {
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-charging": "{capacity}%  ",
        "format-plugged": "{capacity}%  ",
        "format-alt": "{time} {icon}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [" ", " ", " ", " ", " "]
    },
    "custom/keyboard-battery": {
        "interval": 1,
	"format": "⌨️ {}",
	"exec": "$HOME/.config/waybar/scripts/keyboard_battery.sh"
    },


    "cpu": {
        "interval": 5,
        "tooltip": false,
        "format": " {usage}%", //Icon: microchip
        "states": {
          "warning": 70,
          "critical": 90
        }
    },

   
    "memory": {
        "interval": 5,
        "format": " {}%", // Icon: memory
        "states": {
            "warning": 70,
            "critical": 90
        }
    },

    "network": {
        "interval": 0.5,
        "format-wifi": "", // Icon: wifi
        "format-ethernet": "🚫", // Icon: ethernet
        "format-disconnected": "🚫",
        "tooltip-format": "{ifname}: {ipaddr}",
	"on-click": "$HOME/.config/waybar/scripts/wifi.sh"
    },
    
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },
    "sway/mode": {
        "format": "<span style=\"italic\">  {}</span>",
        "tooltip": true
    },

    
    "sway/workspaces": {
        "all-outputs": false,
        "disable-scroll": true,
        "format": "{name}",
    },

    "pulseaudio": {
        "scroll-step": 1,
        "format": "{icon} {volume}%",
        "format-bluetooth": "{icon} {volume}%",
        "format-muted": "",
        "format-icons": {
            "headphones": "",
            "handsfree": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["🔊", ""]
        },
        "on-click": "exec pavucontrol"
    },

    "disk": {
        "interval": 5,
        "format": " {percentage_used:2}%",
        "path": "/"
   
    },
      "backlight": {
        // "device": "acpi_video1",
        "format": "💡 {percent}%",
        "states": [0,50],
        "format-icons": ["", ""],
	"on-click": "$HOME/.config/waybar/scripts/flashlight.sh"
    },
    "tray": {
        "icon-size": 16

        //"spacing": 10
    },


    "custom/modem": {
    	"interval": 1,
	"format": "{}",
	"exec": "$HOME/.config/waybar/scripts/network.sh",
	"on-click": "$HOME/.config/waybar/scripts/mobile-data.sh"
    },

    "custom/notification": {
        "tooltip": false,
        "format": "{icon}",
          "format-icons": {
            "notification": "🔔<span foreground='red'><sup>🔴</sup></span>",
            "none": "🔔",
            "dnd-notification": "🔕<span foreground='red'><sup>🔴</sup></span>",
            "dnd-none": "🔕"
          },
        "return-type": "json",
        "exec-if": "which swaync-client",
        "exec": "swaync-client -swb",
        "on-click": "swaync-client -t -sw",
        "on-click-right": "swaync-client -d -sw",
        "escape": true
      },

    "custom/bar": {
        "format": "",
        "tooltip": false
    }
}

